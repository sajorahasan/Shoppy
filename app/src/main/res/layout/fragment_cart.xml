<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfaff"
    tools:context="com.sajorahasan.shoppy.CartFragment">

    <LinearLayout
        android:id="@+id/list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/amount"
        android:orientation="vertical"
        android:padding="16dp">

        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/cart_recycler_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginBottom="89dp"-->
        <!--android:scrollbars="vertical" />-->

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="89dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/amount"
        android:background="#dad8d8"
        android:elevation="1dp"
        android:gravity="bottom" />

    <!--******TOTAL*******-->


    <LinearLayout
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <customfonts.MyTextView
            android:id="@+id/total1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOTAL AMOUNT"
            android:textColor="#333333"
            android:textSize="12dp" />

        <customfonts.MyTextView
            android:id="@+id/cart_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="#00000000"
            android:gravity="right"
            android:text="$ 858.00"
            android:textColor="#333333"
            android:textSize="18dp" />

    </LinearLayout>

    <customfonts.MyTextView
        android:id="@+id/contCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:drawableRight="@drawable/ic_forward"
        android:drawableTint="#ffffff"
        android:gravity="center"
        android:padding="16dp"
        android:text="CONTINUE TO CHECKOUT"
        android:textColor="#fff"
        android:textSize="16dp" />
</RelativeLayout>
